@model SchoolSite.Models.AssignSubjectToTeacherViewModel
@{
    ViewBag.Title = "AssignSubjectToTeacher";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Przypisz przedmiot do nauczyciela</h2>

<div>
    @using (Html.BeginForm())
    {
    <h4>Przypisz przedmiot</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.TeacherName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TeacherSurname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TeacherSurname)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SubjectName)
        </dt>
        <dd>

            @{
                var list = new List<SelectListItem>();
                foreach (var item in Model.AllSubjects)
                {
                    list.Add(new SelectListItem() { Text = item, Value = item });
                }
                @Html.DropDownListFor(model => model.SubjectName, list, new { @class = "form-control" })



            }
        </dd>

    </dl>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Edytuj" />
        </div>
    </div>
                }
</div>